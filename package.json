{
  "name": "decentralized-identity-vault",
  "version": "1.0.0",
  "description": "Blockchain-based Decentralized Digital Identity and Credential Vault",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "install:contracts": "cd packages/contracts && npm install",
    "install:web": "cd apps/web && npm install",
    "build:packages": "npm run build:crypto-utils && npm run build:did-core && npm run build:ipfs-client && npm run build:api",
    "build:crypto-utils": "npm --prefix packages/crypto-utils run build",
    "build:did-core": "npm --prefix packages/did-core run build",
    "build:ipfs-client": "npm --prefix packages/ipfs-client run build",
    "build:api": "npm --prefix packages/api run build",
    "build:contracts": "cd packages/contracts && npm run build",
    "build:web": "npm --prefix apps/web run build",
    "build": "npm run build:packages && npm run build:web",
    "test:contracts": "cd packages/contracts && npm test",
    "test:web": "cd apps/web && npm test",
    "dev:web": "cd apps/web && npm start"
  },
  "keywords": [
    "blockchain",
    "DID",
    "verifiable-credentials",
    "self-sovereign-identity",
    "IPFS",
    "web3"
  ],
  "author": "",
  "license": "MIT"
}

